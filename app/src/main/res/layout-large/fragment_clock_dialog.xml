<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_border_blue"
    android:backgroundTint="@color/white"
    android:orientation="vertical">


    <View
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_10sdp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/rounded_purplebox"
        android:backgroundTint="#99A7B1B6" />

    <!--   <ScrollView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:fillViewport="true">
-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:text="Hours"
                android:textColor="@color/item_text"
                android:textSize="@dimen/_12ssp" />


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=":"
                android:textColor="@color/item_text_new"
                android:textSize="@dimen/_20ssp"
                android:visibility="invisible" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Mins"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/item_text"
                android:textSize="@dimen/_12ssp" />


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=":"
                android:textColor="@color/item_text_new"
                android:textSize="@dimen/_20ssp"
                android:visibility="invisible" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/item_text_new"
                android:textSize="@dimen/_12ssp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layoutClock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtHour"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/rounded_purplebox"
                    android:backgroundTint="@color/bg"
                    android:gravity="center"
                    android:text=""
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/item_text_new"
                    android:textSize="@dimen/_20ssp" />
            </LinearLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=":"
                android:textColor="@color/item_text_new"
                android:textSize="@dimen/_20ssp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtMins"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/rounded_purplebox"
                    android:backgroundTint="@color/bg"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_medium"

                    android:text=""
                    android:textColor="@color/item_text_new"
                    android:textSize="@dimen/_20ssp" />
            </LinearLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=":"
                android:textColor="@color/item_text_new"
                android:textSize="@dimen/_20ssp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/ampm"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/rounded_purplebox"
                    android:backgroundTint="@color/bg"
                    android:gravity="center"
                    android:text=""
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/item_text_new"
                    android:textSize="@dimen/_20ssp" />
            </LinearLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:text="Description"
            android:layout_marginTop="@dimen/_20sdp"
            android:textColor="@color/item_text"
            android:fontFamily="@font/roboto_regular"
            android:textSize="@dimen/_12ssp" />

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/rounded_purplebox"
            android:backgroundTint="@color/bg"
            android:gravity="start"
            android:padding="@dimen/_15sdp"
            android:textColor="@color/item_text_new"
            android:fontFamily="@font/roboto_regular"
            android:textSize="@dimen/_12ssp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/btnApply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:background="@drawable/rounded_purplebox"
            android:backgroundTint="@color/colorPrimary"
            android:gravity="center"
            android:padding="@dimen/_15sdp"
            app:layout_constraintTop_toBottomOf="@+id/about"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="35dp">


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="Apply"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />
        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>
    <!--
                </ScrollView>
    -->


</androidx.appcompat.widget.LinearLayoutCompat>