<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layoutAlarm"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/rounded_purplebox"
        android:backgroundTint="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp"
        android:visibility="visible">

        <de.hdodenhof.circleimageview.CircleImageView
            android:visibility="gone"
            android:id="@+id/imgLastActivityUser"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ttv_name"
                style="@style/textStyleWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Doctor Name"
                android:padding="@dimen/_5sdp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_12ssp" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ttv_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                style="@style/textStyleWhite"
                android:hint="Gender"
                android:padding="@dimen/_5sdp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/item_text"
                android:textSize="@dimen/_10ssp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ttv_phone"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="@font/roboto_medium"
                style="@style/textStyleWhite"
                android:padding="@dimen/_5sdp"
                android:hint="Phone Number"
                android:textColor="@color/item_text"
                android:textSize="@dimen/_10ssp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ttv_address"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:padding="@dimen/_5sdp"
                android:hint="Address"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/item_text"
                android:textSize="@dimen/_10ssp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/pri_spec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                style="@style/textStyleWhite"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:padding="@dimen/_5sdp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/item_text"
                android:textSize="@dimen/_10ssp" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/npi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                style="@style/textStyleWhite"
                android:padding="@dimen/_5sdp"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/item_text"
                android:textSize="@dimen/_10ssp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/hosp_afl_lbn_1"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                style="@style/textStyleWhite"
                android:padding="@dimen/_5sdp"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/item_text"
                android:textSize="@dimen/_10ssp" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/hosp_afl_lbn_2"
                android:visibility="gone"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                style="@style/textStyleWhite"
                android:padding="@dimen/_5sdp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/item_text"
                android:textSize="@dimen/_10ssp" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/hosp_afl_lbn_3"
                android:visibility="gone"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                style="@style/textStyleWhite"
                android:padding="@dimen/_5sdp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/item_text"
                android:textSize="@dimen/_10ssp" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/hosp_afl_lbn_4"
                android:visibility="gone"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                style="@style/textStyleWhite"
                android:padding="@dimen/_5sdp"

                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/item_text"
                android:textSize="@dimen/_10ssp" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/hosp_afl_lbn_5"
                android:visibility="gone"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                style="@style/textStyleWhite"
                android:padding="@dimen/_5sdp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/item_text"
                android:textSize="@dimen/_10ssp" />



        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>