<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data class="Requestbind"></data>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/rounded_fullwhitebox"
        android:layout_height="wrap_content">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layoutAlarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp"
            android:visibility="visible">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgLastActivityUser"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:src="@drawable/user" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_name"
                    style="@style/textStyleWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/item_text"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:drawableStart="@drawable/calendar"
                    android:drawablePadding="@dimen/_5sdp"
                    android:layout_marginLeft="3dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/item_text"
                    android:textSize="@dimen/_10ssp"
                    app:drawableTint="@color/colorPrimary" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:drawableStart="@drawable/ic_baseline_timer_24"
                    android:drawablePadding="@dimen/_5sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/item_text"
                    android:textSize="@dimen/_10ssp"
                    app:drawableTint="@color/colorPrimary" />


            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:ellipsize="end"
            app:drawableTint="@color/colorPrimary"
            android:fontFamily="@font/roboto_medium"
            android:drawablePadding="@dimen/_5sdp"
            android:text=""
            android:textColor="@color/item_text"
            android:textSize="@dimen/_10ssp" />





        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnaccept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/rounded_purplebox"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:layout_weight="1"
                android:visibility="visible"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:fontFamily="@font/roboto_regular"
                android:text="Accept"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintTop_toBottomOf="@+id/about"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="35dp">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnReject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/rounded_purplebox"
                android:backgroundTint="@color/textColor"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@+id/about"
                tools:ignore="MissingConstraints"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:fontFamily="@font/roboto_regular"
                android:text="Decline"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                tools:layout_editor_absoluteX="35dp">

            </androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>




    </LinearLayout>
</layout>