<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<data>

</data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background">

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/containerTitlebar1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/btnLeft2"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/backicon"
                    android:visibility="visible" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtTitle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Edit Doctor Profile"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/btnRight1"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/notifications"
                    android:visibility="invisible" />


            </LinearLayout>


            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_110sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/containerTitlebar1">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_110sdp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:src="@drawable/images"
                    app:civ_border_color="#a093ff"
                    app:civ_border_width="@dimen/_8sdp"
                    tools:ignore="MissingConstraints" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgCamera"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/camera"
                    android:visibility="visible" />


                <ImageView
                    android:id="@+id/edit_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@id/img"
                    android:src="@drawable/edit"
                    app:civ_border_width="@dimen/_1sdp" />

            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:paddingStart="@dimen/_20sdp"
                android:paddingTop="@dimen/_30sdp"

                android:paddingEnd="@dimen/_20sdp"
                android:paddingBottom="@dimen/_20sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relative"
                tools:layout_editor_absoluteX="26dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtFullNameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/white"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="@color/white"
                    app:boxStrokeWidth="1dp"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                    app:hintTextColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:startIconDrawable="@drawable/profile"
                    app:startIconTint="@color/white">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/txtFullName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@android:color/transparent"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="Full Name"

                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/_12ssp"
                        app:validateEmptyMessage="@{@string/invalidName}"
                        app:validateMinLength="@{1}"
                        tools:ignore="MissingConstraints" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtEmailLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColorHint="@color/white"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="@color/white"
                    app:boxStrokeWidth="1dp"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"

                    app:hintTextColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtFullNameLayout"
                    app:startIconDrawable="@drawable/email"
                    app:startIconTint="@color/white">

                    <!--
                                        android:text="m@getnada.com"
                    -->
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/txtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@android:color/transparent"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="Email Address"
                        android:imeOptions="actionNext"
                        android:enabled="false"
                        android:clickable="false"
                        android:focusable="false"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"

                        android:textSize="@dimen/_12ssp"
                        app:validateEmptyMessage="@{@string/invalidEmail}"
                        app:validateType='@{"email"}'
                        tools:ignore="MissingConstraints" />
                </com.google.android.material.textfield.TextInputLayout>


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/txtEmailLayout">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtCalender"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:backgroundTint="@android:color/transparent"
                            android:drawableStart="@drawable/calendar"
                            android:drawablePadding="@dimen/_15sdp"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center|start"
                            android:hint="Date of Birth"
                            android:imeOptions="actionNext"
                            android:paddingStart="@dimen/_14sdp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="@dimen/_12ssp"
                            app:validateEmptyMessage="@{@string/invalidDOB}"
                            app:validateMinLength="@{1}" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="#A926204C" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/genderSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColorHint="@color/white"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="@color/white"
                    app:boxStrokeWidth="1dp"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                    app:hintTextColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout"
                    app:startIconDrawable="@drawable/profession"
                    app:startIconTint="@color/white">


                    <androidx.appcompat.widget.AppCompatEditText

                        android:id="@+id/txtGender"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@android:color/transparent"
                        android:drawableEnd="@drawable/dropdown"
                        android:editable="false"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="Gender"
                        android:text="male"
                        android:imeOptions="actionNext"
                        android:focusable="false"
                        android:inputType="none"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/_12ssp"
                        app:validateEmptyMessage="@{@string/invalidProfession}"
                        app:validateMinLength="@{1}" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.rilixtech.widget.countrycodepicker.CountryCodePicker
                    android:id="@+id/ccp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:ccp_showFlag="false"
                    app:ccp_dialogTextColor="@color/black"
                    app:ccp_textColor="@color/white"
                    app:ccp_defaultNameCode="us"
                    app:layout_constraintTop_toTopOf="@id/txtPhoneLayout"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/txtPhoneLayout"
                    app:layout_constraintBottom_toBottomOf="@id/txtPhoneLayout"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtPhoneLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColorHint="@color/white"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="@color/white"
                    app:boxStrokeWidth="1dp"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                    app:hintTextColor="@color/white"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/ccp"
                    app:layout_constraintTop_toBottomOf="@+id/genderSpinner"
                    app:startIconDrawable="@drawable/password"
                    app:startIconTint="@color/white">




                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/txtPhone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@android:color/transparent"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="Phone Number"
                        android:imeOptions="actionNext"

                        android:inputType="number"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/_12ssp"
                        app:validateEmptyMessage="@{@string/invalidPhone}"
                        app:validateMinLength="@{1}" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColorHint="@color/white"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="@color/white"
                    app:boxStrokeWidth="1dp"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                    app:hintTextColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtPhoneLayout"
                    app:startIconDrawable="@drawable/profession"
                    app:startIconTint="@color/white">

                    <!--
                                        android:text="m@getnada.com"
                    -->
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/txtProfession"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@android:color/transparent"
                        android:drawableEnd="@drawable/dropdown"
                        android:editable="false"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="Profession"
                        android:imeOptions="actionNext"
                        android:focusable="false"
                        android:inputType="none"
                        android:text="Dentist"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/_12ssp"
                        app:validateEmptyMessage="@{@string/invalidProfession}"
                        app:validateMinLength="@{1}" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtBioLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColorHint="@color/white"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="@color/white"
                    app:boxStrokeWidth="1dp"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                    app:hintTextColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtSpinner"
                    app:startIconDrawable="@drawable/bio"
                    app:startIconTint="@color/white">

                    <!--
                                        android:text="m@getnada.com"
                    -->
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/txtBio"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@android:color/transparent"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="Bio"
                        android:text=""
                        android:imeOptions="actionNext"
                        android:inputType="textMultiLine"
                        android:maxLength="250"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/_12ssp"
                        app:validateEmptyMessage="@{@string/invalidBio}"
                        app:validateMinLength="@{1}" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Upload Certificate :"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintTop_toBottomOf="@+id/txtBioLayout"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="26dp" />


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/linearLayoutCompat6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/txt"
                    tools:layout_editor_absoluteX="32dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvCertificates"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_certificate" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivAddImage"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:src="@drawable/addicon1" />

                </androidx.appcompat.widget.LinearLayoutCompat>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/btnSignUp"
                    style="@style/buttonStyle"
                    android:layout_marginTop="52dp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="UPDATE"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat6"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="33dp" />


                <ProgressBar
                    android:id="@+id/pb_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="20dp"
                    android:indeterminateTint="@color/white"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="@id/btnSignUp"
                    app:layout_constraintLeft_toLeftOf="@id/btnSignUp"
                    app:layout_constraintRight_toRightOf="@id/btnSignUp"
                    app:layout_constraintBottom_toBottomOf="@id/btnSignUp"
                    >

                </ProgressBar>

            </androidx.constraintlayout.widget.ConstraintLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>