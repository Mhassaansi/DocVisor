<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="popupMenuStyle">@style/PopupMenu.Example</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="headingStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="headingCall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>


    <style name="textStyle">
        <item name="android:background">@drawable/rounded_corner_bg</item>
        <item name="android:elevation">@dimen/_4sdp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:layout_marginBottom">@dimen/_15sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_15sdp</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="textStyleWhite">
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:minLines">1</item>

        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="textStyleWhiteWithIcon">
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:drawablePadding">@dimen/_15sdp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textStyleMenu">
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/item_text_new</item>


    </style>

    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
        <item name="windowMinWidthMajor">90%</item>
    </style>
    <style name="CustomSpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/ic_menu</item>
    </style>

    <style name="stylePopup" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:itemBackground">@color/transparent</item>
    </style>


    <style name="PopupMenu.Example" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/rounded_square</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:layout_marginBottom">@dimen/_20sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
        <item name="android:layout_marginEnd">@dimen/_5sdp</item>
        <item name="android:background">@drawable/rounded_whitebox</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:padding">@dimen/_15sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>


    <style name="style">
        <item name="android:textColorHighlight">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>


    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColorHighlight">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>


    <style name="BrandedSwitch.control" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#10f621</item>
    </style>

    <style name="Color1SwitchStyle" parent="TextAppearance.AppCompat.Widget.Switch">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#3F51B5</item>
    </style>

    <style name="Theme_Dialog" parent="android:Theme.Holo.Light.Dialog.NoActionBar">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>

    </style>


</resources>



